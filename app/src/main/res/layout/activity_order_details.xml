<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15dp"
                android:textColor="@android:color/white"

                android:id="@+id/tvOD_ID"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_korisnikIme"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_korisnikPrezime"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_lokacija"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_kat"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_krilo"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_nacinPlacanja"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_datumKreiranja"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/lvStavkeNarudzbe"
                >

            </ListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_napomena"
                android:inputType="textMultiLine"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"

                android:id="@+id/tvOD_ukupno"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnOD_zavrsi"
                android:text="Završi narudžbu"
                android:layout_margin="10dp"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>